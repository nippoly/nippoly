{
  "manifest_version": 2,
  "name": "nippoly",
  "version": "1.0.0",
  "description": "読んだ！が10倍速くなる",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["js/copyToClipBoard.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage",
    "clipboardRead"
  ],
  "icons" : {
    "128": "icon.png"
  }
}
